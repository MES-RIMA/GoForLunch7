<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detail_main_picture"
        android:layout_width="@dimen/picture_size_min"
        android:layout_height="@dimen/picture_size_min"
        android:layout_margin="@dimen/margin_to_parent"
        android:contentDescription="@string/logo_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_textview_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/margin_to_parent"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@id/detail_main_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_main_picture"
        app:layout_constraintTop_toTopOf="@id/detail_main_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>